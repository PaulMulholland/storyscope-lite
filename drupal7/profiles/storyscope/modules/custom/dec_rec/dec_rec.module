			$topic_name_pairs = add_top_level_pair($exhibition, $topic_name_pairs);
			$topic_event_links[] = array($topic, 'Exhibitions', $exhibition["mid"]);
			
		}
	}
	return array("events"=>array_merge($output, $previous_output["events"]),
