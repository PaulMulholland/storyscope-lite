 */
function dec_events_of_the_setting($location, $year, $end = 0, $previous_output = array("events"=>array(),"names"=>array(),"links"=>array())) {
	if(!$end) {
		$end = $year;
	}
	$query = array(array(
  "type"=> "/time/event",
  "mid"=> null,
  "name"=> null,
  "/time/event/locations"=> array(array(
    "mid"=> $location
  )),
  "ns3:/time/event/locations"=> array(array(
    "mid"=> null,
  	"name"=> null
  )),
